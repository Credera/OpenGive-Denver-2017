    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Activity.
    -->
    <changeSet id="20170412144656-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="activity"
                                 constraintName="fk_activity_course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="course"/>
                                 
         <addForeignKeyConstraint baseColumnNames="actv_id"
                                 baseTableName="actvity_link"
                                 constraintName="fk_activity_link_activity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity"/>
                                 
       	<addForeignKeyConstraint baseColumnNames="link_id"
                                 baseTableName="actvity_link"
                                 constraintName="fk_activity_link_link_id"
                                 referencedColumnNames="id"
                                 referencedTableName="item_link"/>

    </changeSet>
</databaseChangeLog>
