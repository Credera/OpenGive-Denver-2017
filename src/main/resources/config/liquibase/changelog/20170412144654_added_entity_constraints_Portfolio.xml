    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Portfolio.
    -->
    <changeSet id="20170412144654-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="portfolio"
                                 constraintName="fk_portfolio_student_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>
                                 
       <addForeignKeyConstraint baseColumnNames="portfolio_id"
                                 baseTableName="portfolio_link"
                                 constraintName="fk_portfolio_link_course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="portfolio"/>
                                 
       	<addForeignKeyConstraint baseColumnNames="link_id"
                                 baseTableName="portfolio_link"
                                 constraintName="fk_portfolio_link_link_id"
                                 referencedColumnNames="id"
                                 referencedTableName="item_link"/>

    </changeSet>
</databaseChangeLog>
