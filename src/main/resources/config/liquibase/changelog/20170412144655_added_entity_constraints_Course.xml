<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Course.
    -->
    <changeSet id="20170412144655-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="organization_id"
                                 baseTableName="course"
                                 constraintName="fk_course_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="organization"/>

        <addForeignKeyConstraint baseColumnNames="instructor_id"
                                 baseTableName="course"
                                 constraintName="fk_course_instructor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>
                                 
        <addForeignKeyConstraint baseColumnNames="program_id"
                                 baseTableName="course"
                                 constraintName="fk_course_program_id"
                                 referencedColumnNames="id"
                                 referencedTableName="program"/>
                                 
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="student_course"
                                 constraintName="fk_student_course_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="student_course"
                                 constraintName="fk_student_course_course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="course"/>
                                 
        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="course_link"
                                 constraintName="fk_course_link_course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity"/>
                                 
       	<addForeignKeyConstraint baseColumnNames="link_id"
                                 baseTableName="course_link"
                                 constraintName="fk_course_link_link_id"
                                 referencedColumnNames="id"
                                 referencedTableName="item_link"/>

    </changeSet>
    
</databaseChangeLog>
